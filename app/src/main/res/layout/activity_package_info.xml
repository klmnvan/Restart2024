<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Home"
    android:background="?attr/colorOnBackground">

    <!--Топ бар-->
    <RelativeLayout
        android:id="@+id/LLTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:elevation="2dp"
        android:translationZ="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:background="?attr/colorSecondaryContainer">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_btn_back"
            android:visibility="visible"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            style="@style/TextDescriptionGray14"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="Send a package"/>

    </RelativeLayout>

    <!--Скролл-->
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/LLTopBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="30dp">

            <TextView
                android:id="@+id/TPackage"
                style="@style/TextTittleBlue24"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="20dp"
                android:textSize="20sp"
                android:text="Package Information"/>

            <TextView
                android:id="@+id/TOrigDet"
                style="@style/TextSmallGray14"
                android:layout_marginTop="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_below="@id/TPackage"
                android:layout_marginHorizontal="20dp"
                android:text="Origin details"/>

            <TextView
                android:id="@+id/tCountry"
                style="@style/TextSmallGray14"
                android:layout_marginTop="5dp"
                android:layout_below="@id/TOrigDet"
                android:layout_marginHorizontal="20dp"
                android:text="Mbaraugba, Ovom Amaa Asaa, Abia state"/>

            <TextView
                android:id="@+id/tPhone"
                style="@style/TextSmallGray14"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tCountry"
                android:layout_marginHorizontal="20dp"
                android:text="+234 56543 96854"/>

            <TextView
                android:id="@+id/tOther"
                style="@style/TextSmallGray14"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tPhone"
                android:layout_marginHorizontal="20dp"
                android:text="Origin details"/>

            <TextView
                android:id="@+id/TDestDet"
                style="@style/TextSmallGray14"
                android:layout_marginTop="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_below="@id/tOther"
                android:layout_marginHorizontal="20dp"
                android:text="Destination details"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listDestDetView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TDestDet"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                tools:listitem="@layout/item_check"/>

            <TextView
                android:id="@+id/TOther"
                style="@style/TextSmallGray14"
                android:layout_marginTop="10dp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_below="@id/listDestDetView"
                android:layout_marginHorizontal="20dp"
                android:text="Origin details"/>

            <LinearLayout
                android:id="@+id/LLPackDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TOther"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:layout_marginTop="5dp"
                    android:text="Package Items"/>

                <TextView
                    android:id="@+id/tPackItems"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/orange"
                    android:text="Mbaraugba, Ovom Amaa Asaa, Abia state"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLPackDet"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:layout_marginTop="5dp"
                    android:text="Weight of items"/>

                <TextView
                    android:id="@+id/tWeight"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="1000kg"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLWorth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLWeight"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:layout_marginTop="5dp"
                    android:text="Worth of Items" />

                <TextView
                    android:id="@+id/tWorth"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="N50,000"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLWorth"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:layout_marginTop="5dp"
                    android:text="Tracking Number" />

                <TextView
                    android:id="@+id/tTrack"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="R-7458-4567-4434-5854"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/LLTrack"
                android:layout_marginHorizontal="20dp"
                android:background="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/TCharges"
                style="@style/TextTittleBlue24"
                android:layout_below="@id/view1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Charges"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/LlDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TCharges"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:text="Delivery Charges" />

                <TextView
                    android:id="@+id/tDelivery"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="N2,500.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLInstant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LlDelivery"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:text="Instant delivery" />

                <TextView
                    android:id="@+id/tInstant"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="N300.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLInstant"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:text="Tax and Service Charges" />

                <TextView
                    android:id="@+id/tTax"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="N200.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/LLTax"
                android:layout_marginHorizontal="20dp"
                android:background="?attr/colorOnSurface"/>

            <LinearLayout
                android:id="@+id/LLPackTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextSmallGray14"
                    android:text="Package total" />

                <TextView
                    android:id="@+id/tPackTotal"
                    style="@style/TextSmallGray14"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="N3000.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLBtns"
                android:layout_below="@id/LLPackTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btnEditPack"
                    style="@style/BtnBlueCorners"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Edit package"/>

                <TextView
                    android:id="@+id/btnMakePayment"
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="Make payment"/>

            </LinearLayout>



        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

