<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.OnBoard"
    android:background="?attr/colorOnBackground"
    android:gravity="center">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/image_onboard3"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/LLTexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_below="@id/img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tTittle"
            style="@style/TextTittleBlue24"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:text="Flexible Payment"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tDescription"
            style="@style/TextStandartBlack16"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="60dp"
            android:text="Enjoy quick pick-up and delivery to your destination"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RLButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/LLTexts"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/btnSkip"
            style="@style/BtnBlueCorners"
            android:text="Skip"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnNext"
            style="@style/BtnBlue"
            android:layout_alignParentEnd="true"
            android:text="Next"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnSignUp"
            style="@style/BtnBlue"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:text="Sing Up"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LLHints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_below="@id/RLButtons"
        android:orientation="horizontal">

        <TextView
            style="@style/TextSmallGray14"
            android:text="Already have an account? "
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnSignIn"
            style="@style/TextSmallBlue14"
            android:textStyle="bold"
            android:text="Sing in"
            tools:ignore="HardcodedText" />

    </LinearLayout>



</RelativeLayout>